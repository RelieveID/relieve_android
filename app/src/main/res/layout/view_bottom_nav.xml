<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">
        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#153f3f3f" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/tvHome"
            app:layout_constraintEnd_toStartOf="@+id/btnDiscover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:srcCompat="@drawable/ic_home" />

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular_std_book"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            app:layout_constraintTop_toBottomOf="@+id/btnHome"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnHome"
            app:layout_constraintStart_toStartOf="@+id/btnHome" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnDiscover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/tvDiscover"
            app:layout_constraintStart_toEndOf="@+id/btnHome"
            app:layout_constraintEnd_toStartOf="@+id/btnCall"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_discover" />

        <TextView
            android:id="@+id/tvDiscover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular_std_book"
            android:gravity="center"
            android:text="@string/discover"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnDiscover"
            app:layout_constraintEnd_toEndOf="@+id/btnDiscover"
            app:layout_constraintStart_toStartOf="@+id/btnDiscover" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnDiscover"
            app:layout_constraintEnd_toStartOf="@+id/btnChat"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_call" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/tvChat"
            app:layout_constraintStart_toEndOf="@id/btnCall"
            app:layout_constraintEnd_toStartOf="@+id/btnProfile"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_chat" />

        <TextView
            android:id="@+id/tvChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular_std_book"
            android:gravity="center"
            android:text="@string/chat"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/btnChat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnChat"
            app:layout_constraintStart_toStartOf="@+id/btnChat" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/tvProfile"
            app:layout_constraintStart_toEndOf="@id/btnChat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_user" />

        <TextView
            android:id="@+id/tvProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/circular_std_book"
            android:gravity="center"
            android:text="@string/profile"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnProfile"
            app:layout_constraintEnd_toEndOf="@+id/btnProfile"
            app:layout_constraintStart_toStartOf="@+id/btnProfile" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>