<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivNotice"
        android:background="@drawable/rounded_corner_rect_grey_big"
        android:layout_width="match_parent"
        android:layout_height="136dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNoticeTitle"
        android:text="@string/notice"
        android:textSize="22sp"
        android:layout_marginTop="27dp"
        android:lines="2"
        android:fontFamily="@font/circular_std_black"
        android:textColor="@color/colorTextBlack"
        app:layout_constraintTop_toBottomOf="@+id/ivNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnNegative"
        app:layout_constraintTop_toBottomOf="@+id/tvNoticeTitle"
        app:srcCompat="@drawable/ic_warning"
        android:padding="13dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_corner_rect_danger_hollow"
        android:layout_width="74dp"
        android:layout_height="52dp" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnPositive"
        android:text="@string/imsafe"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:fontFamily="@font/circular_std_bold"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvNoticeTitle"
        app:layout_constraintStart_toEndOf="@id/btnNegative"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/rounded_corner_rect_grey_big"
        android:backgroundTint="@color/colorPrimary"
        android:layout_width="0dp"
        android:layout_height="52dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnPositive"
        app:layout_constraintStart_toStartOf="@+id/btnPositive"
        app:layout_constraintTop_toTopOf="@+id/btnPositive"
        app:srcCompat="@drawable/ic_security" />
</androidx.constraintlayout.widget.ConstraintLayout>