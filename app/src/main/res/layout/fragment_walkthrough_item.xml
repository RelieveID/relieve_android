<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.walkthrough.WalkthroughItemFragment">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivWalkThrough"
        android:background="@drawable/circle_grey_big"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvWalkThroughTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_width="248dp"
        android:layout_height="248dp" />
    <TextView
        android:id="@+id/tvWalkThroughTitle"
        android:gravity="center"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/ivWalkThrough"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvWalkThroughDetail"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp"
        android:fontFamily="@font/circular_std_bold"
        android:textSize="16sp"
        android:textColor="@color/colorTextBlack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_title" />

    <TextView
        android:id="@+id/tvWalkThroughDetail"
        android:gravity="center"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tvWalkThroughTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fontFamily="@font/circular_std_book"
        android:textColor="@color/colorTextGrey"
        android:textSize="12sp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_chat_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>